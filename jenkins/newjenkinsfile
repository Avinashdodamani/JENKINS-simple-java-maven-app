pipeline {
    agent {
        label 'DevNode'
    }

    environment {
        NAME = "Avinash"
    }

    tools {
        maven 'Maven Jobs'
    }

    stages {
        stage('Build') {
            steps {
                sh "mvn clean package"
                echo "Hello, $NAME"
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: '**/target/*.war'
        }
    }
}
