pipeline {
    agent {
        label 'DevNode'
    }

    environment {
        NAME = "Avinash"
    }

    tools {
        maven 'Maven Jobs'
    }

    stages {
        stage('Install Git') {
            steps {
                sh '''
                    if ! command -v git &> /dev/null; then
                        sudo apt update && sudo apt install -y git
                    fi
                '''
            }
        }

        stage('Build') {
            steps {
                sh "mvn clean package"
                echo "Hello, $NAME"
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: '**/target/*.war'
        }
    }
}
